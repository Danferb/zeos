#ifndef __IO_H__
#define __IO_H__

#include <types.h>

/** Screen functions **/
/**********************/

#define BUFSIZE 80

Byte inb (unsigned short port);
void printc(char c);
void printc_xy(Byte x, Byte y, char c);
void printk(char *string);

struct keyboardbuffer {
    char buf[BUFSIZE];
    int start;
    int end;
    int count;
} kbf;

#endif  /* __IO_H__ */
